<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 width="400" 
		 height="300" 
		 currentState="LineChart">
	<fx:Declarations>
		<mx:SeriesInterpolate id="seriesInterpolate" duration="1000" />
	</fx:Declarations>
	
	<s:layout>
		<s:VerticalLayout />
	</s:layout>
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			
			import spark.events.IndexChangeEvent;
			
			[Bindable]
			public var applicationSales:ArrayCollection;

			protected function controlState_changeHandler(event:IndexChangeEvent):void
			{
				currentState = controlState.selectedItem.state;
			}

		]]>
	</fx:Script>
	
	
	
	<s:states>
		<mx:State name="LineChart" />
		<s:State name="BarChart" />
	</s:states>
	
	<s:DropDownList id="controlState" change="controlState_changeHandler(event)" labelField="name" selectedIndex="1">
		<s:dataProvider>
			<s:ArrayCollection>
				<s:source>
					<fx:Array>
						<fx:Object name="Line Chart Mode" state="LineChart" />
						<fx:Object name="Bar Chart Mode" state="BarChart" />
					</fx:Array>
				</s:source>
			</s:ArrayCollection>
		</s:dataProvider>
	</s:DropDownList>
	
	<mx:LineChart width="100%" height="100%" dataProvider="{applicationSales}" showDataTips="true" includeIn="LineChart">
		<mx:series>
			<mx:LineSeries yField="saleAmount" showDataEffect="seriesInterpolate" />
		</mx:series>
		<mx:horizontalAxis>
			<mx:CategoryAxis categoryField="saleMonth" />
		</mx:horizontalAxis>
	</mx:LineChart>
	
	<mx:ColumnChart width="100%" height="100%" dataProvider="{applicationSales}" showDataTips="true" includeIn="BarChart">
		<mx:series>
			<mx:ColumnSeries yField="saleAmount" xField="saleMonth" showDataEffect="seriesInterpolate" />
		</mx:series>
		<mx:horizontalAxis>
			<mx:CategoryAxis categoryField="saleMonth" />
		</mx:horizontalAxis>
	</mx:ColumnChart>
	
</s:Group>
